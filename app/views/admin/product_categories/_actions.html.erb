<ul>
  <% if Admin::ProductCategoriesController.searchable? %>
    <li>
      <%= render :partial => "/shared/admin/search",
                  :locals => {
                    :url => admin_product_categories_path
                  } %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), new_admin_product_category_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? and Admin::ProductCategoriesController.sortable? and ProductCategory.count > 1 %>
  <li>
    <%= link_to t('.reorder', :what => "Product Categories"),
                 admin_product_categories_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Product Categories"),
                 admin_product_categories_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
  <li>
    <%= link_to 'Manage Products', admin_products_path,
                  :class => "edit_icon" %>
  </li>
</ul>