<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(product_category) -%>">
  <span class='title'>
    <%= product_category.name %>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_product_category_path(product_category),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_product_category_path(product_category),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'shared.admin.delete', :title => product_category),
        :method => :delete %>
  </span>
</li>
